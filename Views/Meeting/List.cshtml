@model List<UserInfo>

<main class="text-center">
    <h1 class="h4">Meeting Participation List</h1>
    <table class="table table-border">
        <thead>
        <tr>
            <td>Name</td>
            <td>Will Attend?</td>
            <td>Details</td>
        </tr>
        </thead>
        <tbody>
        
        @{ int i = 0; }
        
        @foreach (var user in Model)
        {
            var member = user.WillAttend == true ? "Yes" : "No";
            var className = user.WillAttend == true ? "table-success" : "table-danger";
            @if (user.WillAttend == true)
            {
                i++;
            }

            <tr class="@className">
                <td>@user.Name</td>
                <td>@member</td>
                <td><a class="btn btn-sm btn-primary" asp-controller="Meeting" asp-action="Details" asp-route-id="@user.Id">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <p>Participant: @i</p>
        </div>
    </div>
</main>

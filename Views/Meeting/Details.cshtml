@model UserInfo

@{
    ViewBag.Title = "Application Details";
}

@{
    var className = @Model.WillAttend == true ? "success" : "danger";
    var member = @Model.WillAttend == true ? "You attended the meeting." : "You did not attended the meeting.";
}


<main class="text-center">
    <h1 class="h4">Application Details</h1>
    <p>
        <span class="badge text-bg-@className">@member</span>
    </p>
    <p>Name: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Telephone Number: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">Go List</a>
</main>